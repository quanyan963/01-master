<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/item_padding_left"
        android:layout_marginRight="@dimen/item_padding_left"
        android:layout_marginTop="@dimen/item_padding_left"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_music_control" />

    <RelativeLayout
        android:id="@+id/layout_music_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/music_bottom_control" />
    </RelativeLayout>
</RelativeLayout>
