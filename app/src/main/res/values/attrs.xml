<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ItemLayout">
        <attr name="iv_left" format="reference" />
        <attr name="text_left_top" format="string" />
        <attr name="text_left_bottom" format="string" />
        <attr name="text_right" format="string" />
        <attr name="iv_right" format="reference" />
        <attr name="item_bg" format="color" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="background_2" format="reference" />
    </declare-styleable>

    <declare-styleable name="color_picker">
        <!-- 背景圆的半径 -->
        <attr name="circle_radius" format="dimension" />
        <!-- 可滑动小球的半径 -->
        <attr name="center_radius" format="dimension" />
        <!-- 可滑动小球的颜色 -->
        <attr name="center_color" format="color" />
    </declare-styleable>
</resources>
